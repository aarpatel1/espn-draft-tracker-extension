{
    "manifest_version": 3,
    "name": "ESPN Draft Tracker",
    "version": "1.0",
    "description": "Tracks players drafted in ESPN fantasy leagues and provides real-time updates and suggestions.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://fantasy.espn.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://fantasy.espn.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}